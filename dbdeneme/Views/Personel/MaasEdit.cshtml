@model dbdeneme.Models.Maas

@{
    ViewData["Title"] = "Maaş Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="MaasEdit" method="post" class="p-4 bg-light rounded">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PersonelId" />

    <div class="mb-3">
        <label asp-for="Tutar" class="form-label">Maaş Tutarı (₺)</label>
        <input asp-for="Tutar" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="Tutar" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OdemeTarihi" class="form-label">Ödeme Tarihi</label>
        <input asp-for="OdemeTarihi" type="date" class="form-control" />
        <span asp-validation-for="OdemeTarihi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
