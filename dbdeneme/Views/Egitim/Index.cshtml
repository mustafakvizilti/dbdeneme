@model List<dbdeneme.Models.Egitim>

<h2>Eğitim Listesi</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var egitim in Model)
        {
            <tr>
                <td>@egitim.Ad</td>
                <td>
                    <a href="/Egitim/Detay/@egitim.Id" class="btn btn-info btn-sm">Personelleri Gör</a>
                </td>
            </tr>
        }
    </tbody>
</table>
